# Maintainer: Josh Crowder <dodgejcr@manjaro-arm.org>
pkgname=mdm-manjaro-theme
_gitname="mdm-manjaro-theme"
pkgver=20160815.a29121c
pkgrel=1
pkgdesc="An HTML5 theme for MDM's webkit greeter based off of MDModern by Phillip Miller."
arch=('any')
url="https://github.com/manjaro-arm/mdm-manjaro-theme"
license=('GPL3')

makedepends=('git')

source=(
  "$_gitname::git+https://github.com/manjaro-arm/mdm-manjaro-theme.git"
)

sha256sums=('SKIP')

_gitroot=https://github.com/manjaro-arm/mdm-manjaro-theme.git

pkgver() {
  cd "$srcdir/$_gitname"
  git log -1 --date=short --format="%cd.%h" | tr -d '-'
}

package() {
  cd "$srcdir/$_gitname"
  destdir="${pkgdir}/usr/share/mdm/html-themes/mdm-manjaro-theme/"
  mkdir -p ${destdir}
  cp -r * ${destdir}
}

# vim:set ts=2 sw=2 et:
